<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItensActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/idTabLayout"
        app:tabMode="scrollable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTabItemPromo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/baseline_local_offer"
            android:text="Promoções" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTabItemNovidades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/outline_breaking_news"
            android:text="Novidades" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTabItemOriginais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/outline_blur_circular"
            android:text="Originais" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/idTabItemNossaHorta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/outline_blur_circular"
            android:text="Nossa Horta
" />


    </com.google.android.material.tabs.TabLayout>

</RelativeLayout>